<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <img src="#" alt="">
      </div>
      <div class="pull-left info">
        <p><%= t "alexander_pierce" %></p>
      </div>
    </div>
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header"><%= t "main_navigation" %></li>
      <li class="active">
        <%= link_to admin_dasboard_index_url do %>
          <i class="fa fa-dashboard"></i> <span><%= t("dashboard") %></span>
        <% end %>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-user-circle" aria-hidden="true"></i> <span><%= t("account") %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to admin_accounts_url do %>
              <i class="fa fa-circle-o"></i> <%= t("list") %>
            <% end %>
            <%= link_to new_admin_account_url do %>
              <i class="fa fa-circle-o"></i> <%= t("create") %>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
         <i class="fa fa-building" aria-hidden="true"></i><span><%= t "manufacturer" %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to admin_manufacturers_url do %>
              <i class="fa fa-circle-o"></i> <%= t "list" %>
            <% end %>
            <%= link_to new_admin_manufacturer_url do %>
              <i class="fa fa-circle-o"></i> <%= t "create" %>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
         <i class="fa fa-list-alt" aria-hidden="true"></i> <span><%= t "category" %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to admin_categories_url do %>
              <i class="fa fa-circle-o"></i> <%= t "list" %>
            <% end %>
            <%= link_to new_admin_category_url do %>
              <i class="fa fa-circle-o"></i> <%= t "create" %>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-product-hunt" aria-hidden="true"></i> <span><%= t "product" %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to admin_products_url do %>
              <i class="fa fa-circle-o"></i> <%= t "list" %>
            <% end %>
            <%= link_to new_admin_product_url do %>
              <i class="fa fa-circle-o"></i> <%= t "create" %>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
        <i class="fa fa-first-order" aria-hidden="true"></i> <span><%= t "order" %></span>
          <span class="pull-right-container">
            <i class="fa fa-angle-left pull-right"></i>
          </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to admin_orders_url do %>
              <i class="fa fa-circle-o"></i> <%= t "list" %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </section>
</aside>
