<div class="sidebar-container">
  <div class="js-facet section__sidebar ">
    <div class="facet-group js-facet-group">
      <div class="facet-group-title">
        <a href="javascript:;">
          <%= t "hot" %></a>
      </div>
      <div class="facet-group-content js-facet-form ">
        <ul class="facet-list js-facet-list facet-list-scroll" style="max-height:500px">
          <li data-label="BEAUTY CONCEPT" style="margin-left:18px">
            <span class="facet__text">
              <%= image_tag "anh2.jpg", class: "style_image_hot" %>
            <span class="facet__value__count"></span>
            </span>
          </li>
        </ul>
      </div>
    </div>
    <div class="facet-group js-facet-group">
      <div class="facet-group-title">
        <a href="javascript:;">
          <%= t "product_price" %> </a>
      </div>
      <div class="facet-group-content js-facet-form">
        <ul class="facet-list js-facet-list">
          <li data-label="≤ 500.000đ">
            <span class="facet__text">
              <%= link_to t("lessthan"), "#" %>
              <span class="facet__value__count"> </span>
            </span>
          </li>
          <li data-label="500.000 - 2.000.000đ">
            <span class="facet__text">
              <%= link_to t("about_price"), "#" %>
              <span class="facet__value__count"></span>
            </span>
          </li>
          <li data-label="2.000.000 - 5.000.000đ">
            <span class="facet__text">
              <%= link_to t("about_price1"), "#" %>
              <span class="facet__value__count"></span>
            </span>
          </li>
          <li data-label="5.000.000 - 10.000.000đ">
            <span class="facet__text">
              <%= link_to t("about_price2"), "#" %>
              <span class="facet__value__count"></span>
            </span>
          </li>
          <li data-label="≥ 10.000.000đ">
            <span class="facet__text">
              <%= link_to t("about_price3"), "#" %>
              <span class="facet__value__count"></span>
            </span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
