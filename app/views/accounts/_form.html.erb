<%= form_for @account do |f| %>
  <%= render "shared/error_messages" %>
  <div class="col-lg-6 col-md-6 col-sx-6">
    <%= f.label :fullname, t("fullname") %><br>
    <%= f.text_field :fullname, class: "form-control" %><br>
    <%= f.label :password, t("password") %><br>
    <%= f.password_field :password, class: "form-control" %><br>
    <%= f.label :password_confirmation, t("confirm") %><br>
    <%= f.password_field :password_confirmation, class: "form-control" %><br>
  </div>
  <div class="col-lg-6 col-md-6 col-sx-6">
    <%= f.label :email, t("e_mail") %><br>
    <%= f.email_field :email, class: "form-control" %><br>
    <%= f.label :phone, t("call") %><br>
    <%= f.text_field :phone, class: "form-control" %><br>
    <%= f.label :address, t("addresses") %><br>
    <%= f.text_field :address, class: "form-control" %><br>
  </div>
  <div class="col-lg-12 col-md-12 col-sx-12"><br>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>
