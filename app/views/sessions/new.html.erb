<% provide :title, t("login") %>
<div class="col-lg-12 col-md-12 col-sx-12">
<h1 class="text-center"><%= t "login" %></h1>
  <%= form_for :session, url: login_path do |f| %>
  <%= f.label :email %><br>
  <%= f.email_field :email, class: "form-control" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password, class: "form-control" %><br>
  <%= f.submit t("login"), class: "btn btn-primary" %>
  <% end %>
  <br>
  <p>
    <%= t "new_user" %>
    <%= link_to t("sign_up_now"), signup_path %>
  </p>
</div>
